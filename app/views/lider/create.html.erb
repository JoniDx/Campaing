<%= nav_dashboard current_user.rol %>
<p id="notice" class=""><%= notice %></p>

<div class="container">
    <div class="card">
        <div class="card-body">
            <%= form_with(model: User.new, id: 'formUser', url: '/user') do |f| %>
        
                <div class="d-none">
                    <div class="form-group">
                        <%= f.label :rol, 'Rol del usuario' %>
                        <%= f.text_field :rol, value: 'lider', class: 'form-control' %>
                    </div>
                    <div class="form-group">
                        <%= f.label :create_by, 'Rol del usuario' %>
                        <%= f.text_field :create_by, value: current_user.id, class: 'form-control' %>
                    </div>
                </div>
                

                <div class="form-group">
                    <%= f.label :campaign, 'Campaña' %>
                    <%= select_tag :campaign,  options_from_collection_for_select(Campaign.where(user_id: current_user.id), :id, :name), class: 'form-control' %>
                </div>

               <div class="form-group">
                    <%= f.label :name, 'Nombre' %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
                
                <div class="form-group">
                    <%= f.label :email, 'Correo electrónico' %>
                    <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :password, 'Contraseña' %>
                    <% if @minimum_password_length %>
                    <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                </div>

                <div class="actions">
                    <%= f.submit 'Aceptar', :class => 'btn btn-block btn-outline-primary' %>
                </div>

        
            <%end%>
        </div>
    </div>
</div>
