        <%= form.label "Clave de elector" %>
        <%= form.text_field :clave_elector, class: "form-control"%>
      </div>

      <div class="field form-group">
        <%= form.label :estado %>
        <%= form.text_field :estado, class: "form-control"%>
      </div>

      <div class="field form-group">
        <%= form.label :municipio %>
        <%= form.text_field :municipio, class: "form-control"%>
