        <%= form.label :localidad %>
        <%= form.text_field :localidad, class: "form-control"%>
      </div>                           

      <div class="field form-group d-none">
        <%= form.label :user_id %>
        <% if @edit%>    
          <%= form.number_field :campaign_id, value: @voter.user_id%>
        <% else %>    
          <%= form.number_field :user_id, value: current_user.id%>
        <% end %>    
      </div>

      <div class="field form-group d-none">
        <%= form.label :campaign_id %>  
        <% if @edit%>    
          <%= form.number_field :campaign_id, value: @voter.campaign_id%>
        <% else %>    
          <%= form.number_field :campaign_id, value: current_user.campaign.first.id%>
        <% end %>      
      </div>

      <div class="actions">
        <%= form.submit 'Aceptar', :class => 'btn btn-block btn-outline-primary' %>
